<%= form_for([@article, @article.replies.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :date %><br>
    <%= f.text_area :date %>
  </p>
  <p>
    <%= f.label :reply %><br>
    <%= f.text_area :reply %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>