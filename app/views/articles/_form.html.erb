<%= form_for @article, html: { multipart:true } do |f| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
   
  </p>
  
   <p>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
   
  </p>
  
  <p>
     <%= f.label :category %><br>
    <%= f.collection_select :category, Article::CATEGORIES, :to_s, :to_s, 
       :include_blank => true%>
    
  </p>
  
  
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>